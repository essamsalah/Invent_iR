            <menuSeparator id="separator1" />
            <button id="buttonFormatSelectedRow__HeaderRow" label="Header Row" onAction="RibbonFormatSelectedRowAsHeader"/>
            <button id="buttonFormatSelectedRow__SectionRow" label="Section Row" onAction="RibbonFormatSelectedRowAsSectionHeader"/>
            <button id="buttonFormatSelectedRow__NormalRow" label="Normal Row" onAction="RibbonFormatSelectedRowAsNormalRow"/>
